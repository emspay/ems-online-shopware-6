<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Ginger\EmsPay\Service\Gateway">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Ginger\EmsPay\Service\Helper" />
            <argument type="service" id="Shopware\Storefront\Controller\ErrorController" />
            <tag name="shopware.payment.method.async" />
        </service>
        <service id="Ginger\EmsPay\Controller\Webhook" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Ginger\EmsPay\Service\Helper" />
        </service>
        <service id="Ginger\EmsPay\Service\Helper">
            <tag name="ginger.service.helper" />
            <argument type="service" id="Shopware\Core\Framework\Log\LoggerFactory"/>
        </service>
        <service id="Ginger\EmsPay\Subscriber\captureOrder">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order_delivery.repository"/>
            <tag name="kernel.event_listener" event="state_machine.order_delivery.state_changed" method="onOrderDeliveryStateChange"/>
        </service>
        <service id="Ginger\EmsPay\Subscriber\paymentsCustomFields">
            <argument type="service" id="payment_method.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Ginger\EmsPay\Service\Helper" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="Ginger\EmsPay\Subscriber\emsPluginExeption">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Ginger\EmsPay\Service\Helper" />
            <argument type="service" id="Shopware\Storefront\Controller\ErrorController" />
            <argument type="service" id="Symfony\Component\HttpFoundation\RequestStack" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
